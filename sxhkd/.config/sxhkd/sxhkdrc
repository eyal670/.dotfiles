# terminal emulator - alacritty with tmux last session
super + shift + Return 
  alacritty -e tmux a

# terminal emulator - just alacritty 
super + shift + t
  alacritty

# rofi - grave=~ {clipboard, drun, window switcher}
ctrl + grave ; {grave,1,Tab} 
  rofi {-modi "clipboard:greenclip print" -show clipboard -run-command '\{cmd\}',-show drun -show-icons,-show window}

# spt - {open,play/pause}
ctrl + grave ; s ; {o,p}
  {gnome-terminal -- tmux a -t spt,spt playback -t}

# open calculator
super + shift + c
  gnome-calculator
  
# list keybinding
super + shift + slash
  $HOME/Scripts/sxhkd-help.sh 

# make sxhkd reload its configuration files
super + shift + Escape
	pkill -USR1 -x sxhkd
